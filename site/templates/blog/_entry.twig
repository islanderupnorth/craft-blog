{% extends '_layout' %}

{% block main %}
  <div class="blog-post">
    <p class="blog-date">{{ entry.postDate | date("M d, Y") }}</p>
    <h1 class="blog-title">{{ entry.title }}</h1>
    {# <h2 class="blog-tldr">{{ entry.blogIntroduction }}</h2> #}
    {% for block in entry.modules %}
        {% include ('blog/_partials/_' ~ block.type.handle) %}
    {% endfor %}
  </div>
{% endblock %}